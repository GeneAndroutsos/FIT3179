{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 850,
    "height": 420,
    "data": {
        "url": "https://raw.githubusercontent.com/GeneAndroutsos/FIT3179/main/AustralianAverageMaxTemp.csv"
    },
    "params": [
        {
            "name": "selectedState",
            "bind": {
                "input": "select",
                "options": [
                    "All",
                    "Western Australia",
                    "Queensland",
                    "New South Wales",
                    "Victoria",
                    "South Australia",
                    "Tasmania",
                    "Northern Territory",
                    "Australian Capital Territory"
                ],
                "name": "Select State: "
            },
            "value": "All"
        },
        {
            "name": "selectedYear",
            "value": 2000,
            "bind": {
                "input": "range",
                "min": 1975,
                "max": 2019,
                "step": 1,
                "name": "Select Year: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.Year == selectedYear"
        },
        {
            "filter": "datum.elev <= 1200"
        },
        {
            "filter": "selectedState == 'All' || datum.state == selectedState"
        }
    ],
    "layer": [
        {
            "params": [
                {
                    "name": "brush",
                    "select": {
                        "type": "interval"
                    }
                }
            ],
            "mark": {
                "type": "point",
                "opacity": 0.75,
                "filled": true,
                "size": 100,
                "stroke": "#334155",
                "strokeWidth": 0.4
            },
            "encoding": {
                "x": {
                    "field": "elev",
                    "type": "quantitative",
                    "title": "Elevation (m)",
                    "axis": {
                        "grid": true,
                        "gridColor": "#e2e8f0"
                    }
                },
                "y": {
                    "field": "Temp",
                    "type": "quantitative",
                    "title": "Average Max Temperature (°C)",
                    "axis": {
                        "grid": true,
                        "gridColor": "#f1f5f9"
                    }
                },
                "color": {
                    "field": "Temp",
                    "type": "quantitative",
                    "title": "Temperature (°C)",
                    "scale": {
                        "scheme": "redyellowblue",
                        "reverse": true
                    }
                },
                "tooltip": [
                    {
                        "field": "name",
                        "title": "Station"
                    },
                    {
                        "field": "elev",
                        "title": "Elevation (m)"
                    },
                    {
                        "field": "Temp",
                        "title": "Avg Max Temp (°C)"
                    },
                    {
                        "field": "Year",
                        "title": "Year"
                    }
                ]
            }
        },
        {
            "data": {
                "values": [
                    {}
                ]
            },
            "transform": [
                {
                    "calculate": "selectedYear",
                    "as": "displayYear"
                }
            ],
            "mark": {
                "type": "text",
                "align": "center",
                "fontSize": 18,
                "fontWeight": "bold",
                "color": "#1e293b",
                "y": 10
            },
            "encoding": {
                "text": {
                    "field": "displayYear",
                    "type": "nominal"
                }
            }
        }
    ],
    "config": {
        "background": "#f8fafc",
        "view": {
            "stroke": null
        },
        "axis": {
            "labelColor": "#1e293b",
            "titleColor": "#1e293b",
            "titleFontWeight": "bold"
        },
        "legend": {
            "titleFontSize": 12,
            "labelFontSize": 11,
            "labelColor": "#1e293b",
            "titleColor": "#1e293b",
            "orient": "right"
        }
    }
}